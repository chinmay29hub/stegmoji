{
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "ignoreCommand": "bash -c 'if git diff --quiet HEAD~1 HEAD -- \"app/\" \"components/\" \"lib/\" \"public/\" \"package.json\" \"next.config.js\" \"tailwind.config.js\" \"postcss.config.js\" \"vercel.json\" \".eslintrc.cjs\" \".prettierrc\" \"*.css\" \"*.js\" \"*.jsx\" \"*.ts\" \"*.tsx\"; then echo \"No important files changed, skipping deployment\"; exit 1; else echo \"Important files changed, proceeding with deployment\"; exit 0; fi'",
  "functions": {
    "app/sitemap.xml/route.js": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}